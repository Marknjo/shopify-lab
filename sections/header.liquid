<div class='relative bg-white'>
  <div class='mx-auto px-4 sm:px-6'>
    <nav class='flex justify-center itmes-center py-6 md:justify-start md:space-x-10'>
      <!-- STORE NAME / STORE LOGO -->
      <div class='flex justify-startlg:flx-1 truncate'>
        <div class='text-xl font-bold truncate'>
          {{ shop.name | slice: 0, 9 }}
        </div>
      </div>

      <!-- NAVIGATION MENU -->
      <div class='hidden md:flex space-x-10'>
        {% for link in section.settings.menu.links %}
          {% if link.links != blank %}
            <div class='relate'>
              <button class='inline-flex items-center'>
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>
            </div>

          {% else %}
            <a href='{{ link.url }}' class='text-base text-gray-500 hover:text-gray-700'>{{ link.title }}</a>
          {% endif %}
        {% endfor %}
      </div>

      <!-- CART BUTTON -->
    </nav>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Heading Main Navigation Menu"
    }
  ]
}
{% endschema %}
