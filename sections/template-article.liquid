{% for block in section.blocks %}
  {% case block.type %}
    {% when 'article_title' %}
      <h1>{{ article.title }}</h1>

    {% when 'article_author' %}
      {% if section.settings.enable_author %}
        <small>{{ article.author }}</small>
      {% endif %}

    {% when 'article_published_date' %}
      {% if section.settings.enable_publish_date %}
        <time datetime='{{ article.published_at | date: '%Y-%m-%d' }}'>
          {{- article.published_at | date: '%Y-%m-%d' -}}
        </time>
      {% endif %}

    {% when 'featured_image' %}
      <img src='{{ article.image | image_url }}' loading='lazy' alt='Image' width='auto' height='350'>

    {% when 'article_content' %}
      <div>{{ article.content }}</div>

    {% else %}

  {% endcase %}
{% endfor %}

{% schema %}
{
  "name": "Article Template",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_publish_date",
      "default": true,
      "label": "Display Publish Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
