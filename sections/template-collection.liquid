<div class='px-4 py-8'>
  {% paginate collection.products by 6 %}
    <h1 class='text-3xl text-center'>{{ collection.title }}</h1>

    <div class='max-w-6xl mx-auto'>
      <div class='grid grid-cols-1 md:grid-cols-3 gap-4'>
        {% for product in collection.products %}
          <article class='w-full h-full py-6 px-3'>
            <div class='border bg-white shadow-lg rounded-lg overflow-hidden'>
              <a href='{{ product.url }}'>
                {% if product.featured_image %}
                  <img
                    src='{{ product.featured_image | image_url: height: 400 }}'
                    alt='{{ product.featured_image.alt }}'
                    loading='lazy'
                    width='auto'
                    height='400'
                    class='w-full h-full object-cover object-center'
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                {% endif %}
              </a>

              <div class='flex flex-col p-4'>
                <span class='text-sm text-gray-400'>{{ product.vendor | truncate: 12 | upcase }}</span>

                <a href='{{ product.url }}' class='text-gray-700 uppercase font-medium'>{{ product.title }}</a>

                <p class='text-gray-500 mb-4 mt-2'>{{ product.price | money }}</p>
              </div>
            </div>
          </article>
        {% else %}
          <p class='text-center'>There is no collection inside of this collection</p>
        {% endfor %}
      </div>
    </div>

    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>
