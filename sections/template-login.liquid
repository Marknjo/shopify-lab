<div class='flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 h-full'>
  <div class='max-w-md w-full space-y-8'>
    <div>
      <h1 class='text-center text-3xl font-bold mt-6'>Sign In to Your Account</h1>
    </div>
    <div class='mt-8'>
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class='relative border border-red-400 bg-red-100 text-red-700 px-4  py-3' role='alert'>
            <strong class='font-bold'>Error!</strong>
            <p class='block sm:inline'>{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class='my-2'>
          <label for='[email_address]' class='sr-only' aria-hidden='true'>Email address</label>
          <input
            type='email'
            name='customer[email]'
            id='email_address'
            autocomplete='email'
            placeholder='Email Address'
            class='relative block w-full px-3 py-2 border'
          >
        </div>

        {% if form.password_needed %}
          <div class='my-2'>
            <label for='[passowrd]' class='sr-only' aria-hidden='true'>Password</label>
            <input
              type='password'
              name='customer[password]'
              id='passowrd'
              autocomplete='current-password'
              class='relative block w-full px-3 py-2 border'
            >
          </div>
        {% endif %}

        <div>
          <button
            type='submit'
            class='relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900'
          >
            Sign In
          </button>
        </div>
      {% endform %}
    </div>
  </div>

  <div class='max-w-md w-full space-y-8'>
    <div>
      <h1 class='text-center text-3xl font-bold mt-6'>Recover Your Password</h1>
    </div>

    <div class='mt-8'>
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class='relative border border-red-400 bg-red-100 text-red-700 px-4  py-3' role='alert'>
            <strong class='font-bold'>Error!</strong>
            <p class='block sm:inline'>{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class='my-2'>
          <label for='email' class='sr-only' aria-hidden='true'>Email</label>
          <input
            type='email'
            name='email'
            id='email'
            autocomplete='email'
            placeholder='Your Email'
            class='relative block w-full px-3 py-2 border'
          >
        </div>

        <div>
          <button
            type='submit'
            class='relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900'
          >
            Recover Password
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
