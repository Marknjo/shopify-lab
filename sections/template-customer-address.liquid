<div class='max-w-6xl mx-auto px-4 py-12' x-data='{ newAddress: false }'>
  <div class='flex flex-col md:flex-row items-center justify-between my-5 gap-4'>
    <h1 class='text-2xl font-bold text-gray-700'>Addresses</h1>
    <button
      @click='newAddress = true'
      type='button'
      class='text-white font-medium bg-gray-700 hover:bg-gray-900 px-6 py-2'
    >
      Create new address
    </button>
    <a href='{{ routes.account_url }}' class='text-blue-600 hover:text-blue-800 font-medium underline'
      >Back to account</a
    >
  </div>

  {% comment %} Modal Form {% endcomment %}
  <div
    x-show='newAddress'
    class='h-full w-full inset-0 bg-gray-600 bg-opacity-50 z-40 backdrop-blur overflow-y-auto fixed'
    @click.stop='newAddress = false'
  ></div>

  <div x-show='newAddress' class='left-[50%] top-20 overflow-y-auto  fixed z-50 -translate-x-[45%]'>
    <div class='relative max-w-md mx-auto bg-white border p-4 '>
      <div class='flex items-center justify-between mb-4'>
        <h2 class='text-lg font-medium'>New Addess</h2>
        <button @click='newAddress = false' class='text-gray-500'>{% render 'icon-close' %}</button>
      </div>
    </div>
  </div>

  <div>
    {% paginate customer.addresses by 12 %}
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-12 p-4 md:p-12'>
        {% for address in customer.addresses %}
          <div>
            <div class='relative flex flex-col text-center border '>
              {% if address == customer.default_address %}
                <span class='text-xs font-medium text-white bg-green-700 px-4 py-2'>Default</span>
              {% endif %}

              <div class='my-8 h-full text-left p-2'>
                {{ address | format_address }}
              </div>

              <div class='flex flex-row gap-2 p-2'>
                <button class='w-full text-xs text-white bg-gray-700 hover:bg-gray-900 font-medium py-2'>Edit</button>
                <button class='w-full text-xs font-medium text-gray-700 border py-2'>Delete</button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
  </div>
</div>
