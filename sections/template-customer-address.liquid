<script type='text/javascript'>
  class CustomerAddress {
    constructor() {
      this.initCustomerAddress();
      this.customerAddressesSelector();
      this.initDeleteAddressButtons();
    }

    initDeleteAddressButtons() {
      const addressesContainerEl = document.getElementById('addresses-container');

      function deleteAddress(event) {
        const btnEl = event.target;
        if (btnEl.hasAttribute('data-delete-address')) {
          const url = btnEl.dataset.url;

          const canDelete = window.confirm('You are about to delete this address, do you really want to delete it?');

          console.log({ canDelete });

          canDelete && document.querySelector(`form[action="${url}"]`).submit();
        }

        event.stopPropagation();
      }

      addressesContainerEl.addEventListener('click', function (event) {
        deleteAddress(event);
        addressesContainerEl.removeEventListener('click', deleteAddress);
      });
    }

    initCustomerAddress() {
      const allAddressesSelector = document.querySelectorAll('select[data-country-selector]');

      if (allAddressesSelector.length < 1) return;

      const countriesNodes = Array.from(Array.from(allAddressesSelector)[0].querySelectorAll('option'));

      allAddressesSelector.forEach((select, i) => {
        const country = select.getAttribute('value');

        if (!country) return;

        const id = select.dataset.id;

        /**
         * Handle Selected country
         **/
        const provinces = this.getSelectedCountry(select);

        /**
         * Handle Provinces
         **/
        const provinceSelector = document.querySelector(`#address_province_${id}`);

        if (provinces.size === 0) {
          provinceSelector.setAttribute('disabled', 'disabled');
          return;
        }

        provinceSelector.hasAttribute('disabled') && provinceSelector.removeAttribute('disabled');
        const selectedProvince = provinceSelector.getAttribute('value');

        let options = '';
        provinces.forEach((province) => {
          if (province === selectedProvince) {
            options += `<option value="${province}" selected>${province}</option>`;
          } else {
            options += `<option value="${province}">${province}</option>`;
          }
        });

        provinceSelector.innerHTML = options;
      });
    }

    getSelectedCountry(select) {
      let option, selectedOption;

      for (let i = 0; i < select.options.length; i++) {
        option = select.options[i];

        if (option.value === select.getAttribute('value')) {
          selectedOption = option;

          selectedOption.setAttribute('selected', 'selected');
          break;
        }
      }

      return this.getSelectedProvinces(selectedOption);
    }

    getSelectedProvinces(countryOption) {
      const provinces = JSON.parse(countryOption.dataset.provinces);
      return new Map(provinces);
    }

    customerAddressesSelector() {
      const addressesSelector = document.querySelectorAll('select[data-country-selector]');

      if (addressesSelector.length < 1) return;

      addressesSelector.forEach((select) => {
        select.addEventListener('change', (event) => {
          const _this = event.target;

          const provinces = _this.options[_this.selectedIndex].dataset.provinces;
          const arrayOfProvinces = JSON.parse(provinces);

          const provinceSelector = document.querySelector(`#address_province_${_this.dataset.id}`);

          this.prefillProvinces(arrayOfProvinces, provinceSelector);
        });
      });
    }

    prefillProvinces(arrayOfProvinces, provinceSelector) {
      if (arrayOfProvinces.length < 1) {
        provinceSelector.setAttribute('disabled', 'disable');
      } else {
        provinceSelector.hasAttribute('disabled') && provinceSelector.removeAttribute('disabled');

        provinceSelector.innerHTML = '';
      }

      let options = '';

      for (let i = 0; i < arrayOfProvinces.length; i++) {
        options += `<option value="${arrayOfProvinces[i][0]}">${arrayOfProvinces[i][0]}</option>`;
      }

      provinceSelector.innerHTML = options;
    }
  }

  const customerAddress = new CustomerAddress();
</script>
