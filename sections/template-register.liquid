<div class='flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 h-full'>
  <div class='max-w-md w-full space-y-8'>
    <div>
      <h1 class='text-center text-3xl font-bold mt-6'>Register an Account</h1>
    </div>
    <div class='mt-8'>
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class='relative border border-red-400 bg-red-100 text-red-700 px-4  py-3' role='alert'>
            <strong class='font-bold'>Error!</strong>
            <p class='block sm:inline'>{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class='my-2'>
          <label for='first_name' class='sr-only' aria-hidden='true'>First Name</label>
          <input
            type='text'
            name='customer[first_name]'
            id='first_name'
            autocomplete='given-name'
            placeholder='First Name'
            class='relative block w-full px-3 py-2 border'
          >
        </div>

        <div class='my-2'>
          <label for='last_name' class='sr-only' aria-hidden='true'>Last Name</label>
          <input
            type='text'
            name='customer[last_name]'
            id='last_name'
            autocomplete='family_name'
            placeholder='Last Name'
            class='relative block w-full px-3 py-2 border'
          >
        </div>

        <div class='my-2'>
          <label for='email_address' class='sr-only' aria-hidden='true'>Email address</label>
          <input
            type='email'
            name='customer[email]'
            id='email_address'
            autocomplete='email'
            placeholder='Email Address'
            class='relative block w-full px-3 py-2 border'
          >
        </div>

        <div class='my-2'>
          <label for='password' class='sr-only' aria-hidden='true'>Password</label>
          <input
            type='password'
            name='customer[password]'
            id='passowrd'
            autocomplete='new-password'
            class='relative block w-full px-3 py-2 border'
            placeholder='Password'
          >
        </div>

        <div>
          <button
            type='submit'
            class='relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900'
          >
            Register
          </button>
        </div>

        <div class='my-8 text-sm'>
          <p class='text-gray-500'>
            Have account?
            <a
              href='{{ routes.account_login_url }}'
              class='underline hover:text-gray-900'
              >Login</a
            >
          </p>
        </div>
      {% endform %}
    </div>
  </div>
</div>
