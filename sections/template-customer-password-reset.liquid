<div class='flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 h-full'>
  <div class='max-w-md w-full space-y-8'>
    <div>
      <h1 class='text-center text-3xl font-bold mt-6'>Reset Your Password</h1>
    </div>
    <div class='mt-8'>
      {% form 'reset_customer_password' %}
        {% if form.errors %}
          <div class='relative border border-red-400 bg-red-100 text-red-700 px-4  py-3' role='alert'>
            <strong class='font-bold'>Error!</strong>
            <p class='block sm:inline'>{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class='my-2'>
          <label for='password' class='sr-only' aria-hidden='true'>Password</label>
          <input
            type='password'
            name='customer[password]'
            id='passowrd'
            autocomplete='new-password'
            class='relative block w-full px-3 py-2 border'
            placeholder='Password'
          >
        </div>

        <div class='my-2'>
          <label for='password_confirmation' class='sr-only' aria-hidden='true'>Confirm Your Password</label>
          <input
            type='password'
            name='customer[password_confirmation]'
            id='passoword_confirmation'
            autocomplete='new-password'
            class='relative block w-full px-3 py-2 border'
            placeholder='Confirm Your Password'
          >
        </div>

        <div>
          <button
            type='submit'
            class='relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900'
          >
            Reset Password
          </button>
        </div>

        <div class='my-8 text-sm'>
          <p class='text-gray-500'>
            <a
              href='{{ routes.account_login_url }}'
              class='underline hover:text-gray-900'
              >Login</a
            >
            instead?
          </p>
        </div>
      {% endform %}
    </div>
  </div>
</div>
