<article class='w-full h-full py-6 px-3'>
  <div class='border bg-white shadow-lg rounded-lg overflow-hidden'>
    <a href='{{ product.url }}'>
      {% if product.featured_image %}
        <img
          src='{{ product.featured_image | image_url: height: 400 }}'
          alt='{{ product.featured_image.alt }}'
          loading='eager'
          width='auto'
          height='400'
          class='w-full h-full object-cover object-center transition duration-500 ease-in-out transform hover:scale-105 '
        >
      {% else %}
        {{
          'product-1'
          | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 transition duration-500 ease-in-out transform hover:scale-105'
        }}
      {% endif %}
    </a>

    <div class='flex flex-col p-4'>
      <span class='text-sm text-gray-400'>{{ product.vendor | truncate: 12 | upcase }}</span>

      <a href='{{ product.url }}' class='text-gray-700 uppercase font-medium'>{{ product.title }}</a>

      <p class='text-gray-500 mb-4 mt-2'>{{ product.price | money }}</p>
    </div>
  </div>
</article>
